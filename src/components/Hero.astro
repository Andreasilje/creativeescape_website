---
import animationCRTV from "../assets/animationCRTV.mp4";
---

<section class="hero">
  <video autoplay loop muted playsinline class="hero-animation">
    <source src={animationCRTV} type="video/mp4" />
  </video>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .hero-animation {
    position: absolute;
    top: 0;
    left: 0;
    width: 50%;
    height: 50%;
    object-position: center center;
    padding-left: 22rem;
    z-index: 0;
  }
</style>
