---
import animationCRTV from "../assets/animationCRTV.mp4";
---

<section class="hero">
  <video autoplay loop muted playsinline class="hero-animation">
    <source src={animationCRTV} type="video/mp4" />
  </video>
</section>

<style>
  .hero {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }

  .hero-animation {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>
